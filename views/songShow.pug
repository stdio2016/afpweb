extends layout

block title
  if song
    title #{__("Song")} #{song.name} - #{__("Jianpu Space")}
  else
    title #{__("Song not found")} - #{__("Jianpu Space")}

block scripts
  script(src='../javascripts/je.js')
  script(src='../javascripts/MMLNote.js')
  script(src='../javascripts/MMLPart.js')
  script(src='../javascripts/MMLPlayer.js')
  script(src='../javascripts/sound.js')
  script(src='../javascripts/songShow.js')

block content
  if song
    h1 #{__("Song")} #{song.name}
    div
      a.button.cyan(href=song.id+'/edit') #{__("Edit")}
      | 
      a.button.green(href='history?songID='+song.id) #{__("View history")}
    p #{__("Singer") + __(":")}#{song.singer || __("None")}
    p #{__("Language") + __(":")}#{song.language || __("None")}
    if song.jianpu
      p
        | #{__("Jianpu") + __(":")}
      div#jianpuOut.to-jianpu(style='border: 1px solid black;')= song.jianpu
      audio
        source(src="../sounds/blank.mp3", type="audio/mpeg")
    else
      p
        a(href=PREFIX+'/songList/'+song.id+'/edit') #{__("No jianpu")}
    p #{__("Last modified") + __(":")}
      span.date #{+song.modify_time}
    script.
      document.querySelectorAll('.date').forEach(function(x){
        x.textContent = new Date(parseInt(x.textContent)).toLocaleString();
      });
  else
    h1 #{__("Song not found")}
    p #{__("Maybe the song has been deleted")}
    p 
      a(href=PREFIX+'/songList') #{__("search other songs")}
